<div class="container">

  <h2>Créer mon compte Pharmacien</h2>

  <div class="alert alert-primary" role="alert">
    Formulaire d'inscription du pharmacien
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <%= f.input :email, autofocus: true, autocomplete: "email" %>
      <%= f.input :first_name, label: 'Prénom' %>
      <%= f.input :last_name, label: 'Nom' %>
      <%= f.input :address, label: 'Addresse de la pharmacie' %>
      <%= f.input :phone_number, label: 'Numéro de téléphone' %>
      <%= f.input :rpps, label: 'Numéro RPPS' %>
      <%= f.input :adeli, label: 'Numéro ADELI' %>
      <%= f.input :password, label: 'Mot de passe', autocomplete: "new-password" %>
      <%= f.input :password_confirmation,  label: 'Confirmation de mot de passe', autocomplete: "new-password" %>
      <%= f.button :submit, class: "btn btn-primary" %>

  <% end %>

  <%= render "pharmacists/shared/links" %>

</div>